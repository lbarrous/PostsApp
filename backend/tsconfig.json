{
  "include": ["src/*.ts"],

  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "types": ["jest"],
    "strict": true,

    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
